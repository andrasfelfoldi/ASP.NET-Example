@{
    ViewData["Title"] = "Home Page";
}

@model IndexModel;

@if (!Model.Movies.Any())
{
    <span style="margin: 5px auto; text-align:center; display:block;">
        There are no movies in the database currently. <a asp-area="" asp-controller="Home" asp-action="AddMovie" class="nav-link" style="display:inline; padding:0;">Click here</a> to add one!
    </span>
}
else
{
    <div style="display:flex; flex-wrap:wrap; margin-bottom: 40px">
        @foreach (var movie in Model.Movies)
        {
            <div class="card" style="min-width: 18rem; margin: 5px; flex-basis: 32%;">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@movie.ReleaseYear</h6>
                    <p class="card-text">@movie.Rating</p>
                    <a asp-controller="Home" asp-action="EditMovie" asp-route-id="@movie.Id" class="nav-link" style="display:inline; padding:0;">Edit</a>
                    <a asp-controller="Home" asp-action="DeleteMovie" asp-route-id="@movie.Id" class="nav-link" style="display:inline; padding:0;">Delete</a>
                </div>
            </div>
        }
    </div>
}

