@{
    ViewData["Title"] = "Add Movie";
}
@model Movie
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseYear"></label>
        <input asp-for="ReleaseYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" asp-items="@Html.GetEnumSelectList<Rating>()" class="form-control"></select>
        <span asp-validation-for="Rating"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>
